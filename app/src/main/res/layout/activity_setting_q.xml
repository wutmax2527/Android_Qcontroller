<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingQActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lt_Main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            tools:visibility="visible">

            <Button
                android:id="@+id/btn_Setting"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="centerInside"
                android:text="SETTING"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <Button
                android:id="@+id/btn_QDisplay"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:scaleType="centerInside"
                android:text="QDISPLAY"
                android:textColor="@android:color/background_dark"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_bk_setting"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="TODO"
                            android:scaleType="fitXY"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setting"
                        android:textColor="@android:color/background_dark"
                        android:textSize="55sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_Setting_System"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:text="System"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn_Setting_User"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:text="User Management"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn_Setting_Profile"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:text="Profile"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn_Setting_Resource"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:text="Resource"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btn_Setting_Branch"
                        android:layout_width="350dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="30dp"
                        android:text="Branch INFO"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_QDisplay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QDisplay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting_System"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_bk_setting_system"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="TODO"
                            android:padding="10dp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_home_setting_system"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:contentDescription="TODO"
                            android:padding="20dp"
                            android:scaleType="fitXY" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="130dp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SYSTEM"
                        android:textColor="@android:color/background_dark"
                        android:textSize="60dp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_horizontal|center_vertical"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <android.widget.Switch
                            android:id="@+id/switch_mode"
                            android:layout_width="450dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:showText="true"
                            android:switchTextAppearance="@style/Style_switch"
                            android:text="Mode"
                            android:textOff="Offline"
                            android:textOn="Online"
                            android:textSize="40dp"
                            android:textStyle="bold"
                            android:thumb="@drawable/switch_thumb"
                            android:track="@drawable/switch_track" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lt_Setting_System_Server"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="40dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="40dp">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Server"
                            android:textColor="@android:color/background_dark"
                            android:textSize="40dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txt_system_server"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:focusable="auto"
                            android:hint="127.0.0.1/api/"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/background_dark"
                            android:textSize="36sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lt_Setting_System_Branch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="20dp"
                        android:paddingTop="40dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="40dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Branch ID"
                            android:textColor="@android:color/background_dark"
                            android:textSize="40dp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txt_system_branchid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:focusable="auto"
                            android:hint="99999999"
                            android:inputType="textPersonName"
                            android:textColor="@android:color/background_dark"
                            android:textSize="36sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_save_system"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Save"
                            android:textColor="@android:color/background_dark"
                            android:textSize="40dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting_User"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_bk_user"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="TODO"
                                android:scaleType="fitXY" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/btn_home_user"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="TODO"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingTop="60dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/btn_user_addEmp"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:contentDescription="TODO"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="USER INFO"
                                    android:textColor="@android:color/background_dark"
                                    android:textSize="50dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/RC_EmpInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:scrollbars="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting_Resource"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting_Profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lt_Setting_Branch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/imageButton"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="TODO"
                                android:scaleType="fitXY"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/imageButton3"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:contentDescription="TODO"
                                android:scaleType="fitXY" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BRANCH INFO"
                            android:textAlignment="center"
                            android:textColor="@android:color/background_dark"
                            android:textSize="50sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Branch ID : 99999"
                                android:textAlignment="center"
                                android:textColor="@android:color/background_dark"
                                android:textSize="30sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Branch Code" />

                            <EditText
                                android:id="@+id/editTextTextPersonName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Branch Name" />

                            <EditText
                                android:id="@+id/editTextTextPersonName2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="IP" />

                            <EditText
                                android:id="@+id/editTextTextPersonName3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="Name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Open Time" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Close Time" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"></LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>